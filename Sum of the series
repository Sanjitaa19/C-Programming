#include <stdio.h>

int main() {
    int N, i, j, sum = 0;
    
    printf("Enter the value of N: ");
    scanf("%d", &N);
    
    for (i = 1; i <= N; i++) {
        for (j = 1; j <= i; j++) {
            sum += j;
        }
    }
    
    printf("Sum of the series is: %d\n", sum);
    
    return 0;
}
